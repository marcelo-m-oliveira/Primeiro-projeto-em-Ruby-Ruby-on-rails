<%= form_with(model: coin, local: true) do |form| %>
  <% if coin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(coin.errors.count, "error") %> NÃ£o foi possivel salvar esta moeda: </h2>

      <ul>
      <% coin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class:"form-control", placeholder:"Bitcoin" %>
  </div>

  <div class="form-group">
    <%= form.label :acronym %>
    <%= form.text_field :acronym, class:"form-control", placeholder:"BTC" %>
  </div>

  <div class="form-group">
    <!--%= image_tag coin.url_image, width: 25, height: 25 unless coin.url_image.blank? %> -->
    <%= form.label :url_image %>
    <%= form.text_field :url_image, class:"form-control", placeholder:"https://usethebitcoin.com/wp-content/uploads/2018/07/bitcoin_PNG47.png" %>
  </div>

  <div class="form-group">
    <%= form.label :mining_type_id %>
    <%= form.select( "mining_type_id", @mining_type_options, { include_blank: 'Selecione...' }, class:"form-control") %>
  </div>

  <div class="actions">
    <%= form.submit nil, class:"btn btn-success" %>
  </div>
<% end %>

</br>